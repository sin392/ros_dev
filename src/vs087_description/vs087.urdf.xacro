    <xacro:macro name="vs087" params="prefix">
        <link name="${prefix}_base_link">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://vs087_description/base_link.dae" scale="1 1 1" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://vs087_description/base_link.dae" scale="1 1 1" />
                </geometry>
            </collision>
            <inertial>
                <mass value="1" />
                <origin rpy="0 0 0" xyz="0 0 0" />
                <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
            </inertial>
        </link>

        <xacro:J prefix="${prefix}" num="1" />
        <xacro:init_joint prefix="${prefix}" num="1" origin_xyz="${joint_1_xyz}" axis_xyz="${axis1}" lim_effort="${eff1}" lim_lower="${low1}" lim_upper="${up1}" lim_velocity="${vel1}" />
        <xacro:trans prefix="${prefix}" num="1" />

        <xacro:J prefix="${prefix}" num="2" />
