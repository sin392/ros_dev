<launch>
  <arg name="sim" default="true"/>
  
  <!-- Define the controller manager plugin to use for trajectory execution -->
  <param name="moveit_controller_manager" value="moveit_simple_controller_manager/MoveItSimpleControllerManager" />

  <!-- loads controller list to the param server -->
  <group if="$(arg sim)">
    <rosparam file="$(find myrobot_v2_moveit_config)/config/ros_controllers.yaml"/>
  </group>
  <group unless="$(arg sim)">
    <rosparam file="$(find myrobot_moveit)/config/real_controllers.yaml"/>
  </group>
</launch>
